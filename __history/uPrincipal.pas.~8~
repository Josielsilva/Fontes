procedure TForm1.CadastrodeClientes1Click(Sender: TObject);
var FCliente : TfrmCliente;
begin
    FCliente := TfrmCliente.Create(Application);
   with FCliente do
   begin
    try
     ShowModal;
    finally
     Free;
    end;
   end;
end;

